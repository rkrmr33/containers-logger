<!DOCTYPE html>
<html>
  <head>
      <meta charset="UTF-8">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" />
      <link rel="stylesheet" href="/log.css" />
      <title>Container Logger</title>
  </head>
  <body style="margin: 30px;">
    <div class="ui grid">
        <div class="four wide column"></div>
        <div class="eight wide column">
            <h1>Container: </h1>
            <% let id = container.Id.substring(0, 12); %>
            <table width="50%" class="ui left aligned selectable celled striped table">
                <thead>
                    <tr>
                        <th class="center aligned">Id</th>
                        <th class="center aligned">Image</th>
                        <th class="center aligned">State</th>
                        <th class="center aligned">Names</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><%- id -%></td>
                        <td><%- container.Image -%></td>
                        <td><%- container.State -%></td>
                        <td><%- container.Names.join(', ') -%></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="four wide column"></div>
    </div>

    <div class="ui grid">
        <div class="one wide column"></div>
        <div class="fourteen wide column">
            <table class="ui selectable celled striped table" style="margin-bottom: 0; border-bottom: none;">
                <thead>
                    <tr>
                        <th class="center aligned" style="width: 3.7%;">No.</th>
                        <th class="center aligned" style="width: 19%;">Time logged</th>
                        <th class="center aligned" style="width: 6%;">Source</th>
                        <th class="center aligned" style="width: 70%;">Log</th>
                    </tr>
                </thead>
            </table>
            <table class="ui selectable celled striped table scrollable-table" style="margin-top:0px; border-top: none">
                <tbody>
                    <tr>
                        <td style="width: 3.7%;" class="center aligned number">1</td>
                        <td style="width: 19%;" class="center aligned time-logged"><%- new Date().toUTCString() -%></td>
                        <td style="width: 6%;" class="center aligned source">stdout</td>
                        <td style="width: 70%;" class="log" style="word-wrap: break-word;"><%- container.Id + container.Id + container.Id -%></td>
                    </tr>
