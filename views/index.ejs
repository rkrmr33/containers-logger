<!DOCTYPE html>
<html>
  <head>
      <meta charset="UTF-8">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" />
      <title>Container Logger</title>
  </head>
  <body style="margin: 30px;">
        <h1 class="ui center aligned icon header">
            <i class="docker icon"></i>
            Containers:
        </h1>

    <div class="ui grid">
        <div class="two wide column"></div>
        <div class="twelve wide column">
            <div class="ui grid">
                <div class="two wide column"></div>
                <div class="twelve wide column">
                    <div style="margin-left: auto; margin-right: auto;" class="ui statistics">
                        <div class="statistic">
                            <div class="value">
                                <%- containers.filter(container => container.state == 'running').length -%>
                            </div>
                            <div class="label">
                                Running
                            </div>
                        </div>
                        <div class="statistic">
                            <div class="value">
                                <%- containers.filter(container => container.state == 'exited').length -%>
                            </div>
                            <div class="label">
                                Exited
                            </div>
                        </div>
                        <div class="statistic">
                            <div class="value">
                                <%- containers.filter(container => container.state == 'paused').length -%>
                            </div>
                            <div class="label">
                                Paused
                            </div>
                        </div>
                        <div class="statistic">
                            <div class="value">
                                <%- containers.filter(container => container.state == 'restarting').length -%>
                            </div>
                            <div class="label">
                                Restarting
                            </div>
                        </div>
                        <div class="statistic">
                            <div class="value">
                                <%- containers.filter(container => container.state == 'created').length -%>
                            </div>
                            <div class="label">
                                Created
                            </div>
                        </div>
                        <div class="statistic">
                            <div class="value">
                                <%- containers.filter(container => container.state == 'dead').length -%>
                            </div>
                            <div class="label">
                                Dead
                            </div>
                        </div>
                        <div class="statistic">
                            <div class="value">
                                <%- containers.length -%>
                            </div>
                            <div class="label">
                                Total
                            </div>
                        </div>
                    </div>
                </div>
                <div class="two wide column">
                    
                </div>
            </div>
            <table width="50%" class="ui left aligned selectable celled striped table">
                <thead>
                    <tr>
                        <th class="center aligned">No.</th>
                        <th class="center aligned">Id</th>
                        <th class="center aligned">Image</th>
                        <th class="center aligned">State</th>
                        <th class="center aligned">Status</th>
                        <th class="center aligned">Names</th>
                        <th class="center aligned">Logging?</th>
                    </tr>
                </thead>
                <tbody>
                    <% let i = 0; containers.forEach(container => {
                            let id = container.id.substring(0, 12); %>
                        <tr>
                            <td class="center aligned"><%- ++i -%></td>
                            <td><a href="/container/<%- id -%>"><%- id -%></a></td>
                            <td>
                                <%- container.image.length > 20 ?
                                    container.image.substring(0, 20) + '...' :
                                    container.image;
                                     -%>
                            </td>
                            <td><%- container.state -%></td>
                            <td><%- container.status -%></td>
                            <td><%- container.names.join(', ') -%></td>
                            <td class="collapsing">
                                <div class="ui fitted slider checkbox">
                                <input <%- container.logging ? 'checked' : '' -%> 
                                    type="checkbox" onclick="loggingClicked(this, '<%- id -%>')">
                                    <label></label>
                                </div>
                            </td>
                        </tr>
                        
                    <% }); %>
                </tbody>
                <tfoot class="full-width">
                    <tr>
                    <th colspan="7">
                    </th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="two wide column"></div>
    </div>

    <script type="text/javascript" src="/index.js"></script>
  </body>
</html>